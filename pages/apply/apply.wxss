.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
}
image {
  width: 100%;
  height: 350rpx;
  margin: 30rpx 0;
}

text{
  color: #42a886;
}

.title{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.title1{
  margin-top: 50rpx;
  padding: 10rpx;
  font-size: 30rpx;
}

.title2{
  font-weight: bolder;
  margin-bottom: 40rpx;
}

button {
  width: 85% !important; 
  height: 100rpx !important;
  padding: 0 !important;
  line-height: 100rpx !important;
  font-weight: 0 !important;
  border-radius: 15rpx !important; 
  letter-spacing: 5rpx;
  margin-top: 0rpx !important;
  background: #00bd73;
  color: white;
}