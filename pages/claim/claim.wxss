.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title > .title1 {
  font-size: 55rpx;
  font-weight: bolder;
  margin: 5rpx 0;
}
.title > .title2 {
  font-size: 36rpx;
  color: #5c5c5c;
}

image{
  width: 100vw;
  height: 350rpx;
  margin: 20rpx 0;
}

button {
  width: 85vw !important; 
  height: 90rpx !important;
  padding: 0 !important;
  line-height: 90rpx !important;
  font-weight: 0 !important;
  border-radius: 10rpx !important; 
  letter-spacing: 5rpx;
  margin: 0rpx !important;
  background:linear-gradient(to top,#08ba7c,50%,#00e78d);
  color: white;
  font-size: 35rpx !important;
}

.auth{
  width: 85vw;
  display: flex;
  justify-content: center;
  padding: 20rpx;
}
.auth > text{
  font-size: 30rpx;
  color: #8a8a8a;
}
.auth .sq{
  color: #767676;
  font-weight: bolder;
}