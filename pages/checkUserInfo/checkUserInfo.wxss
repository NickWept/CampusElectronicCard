/* 头部步骤卡片 */
.header{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  padding-bottom: 25rpx;
}

.header > .stepbox{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stepbox > .item{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.item > .num{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(93, 93, 93, 0.5);
  color: white;
  font-size: 40rpx;
  position: relative;
}
.item > .num::before{
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background-color: rgba(122, 122, 122, 0.2);
  z-index: -1;
}
.item > .num.active{
  background-color: rgba(0, 178, 106, 0.8) !important;
}
.item > .num.active::before{
  background-color: rgba(0, 178, 106,0.2) !important;
}

.item > text{
  margin: 40rpx;
  font-size: 30rpx;
}

.content {
  line-height: 45rpx;
  width: 90vw;
  font-size: 24rpx;
  font-weight: bolder;
}
.content > text{
  color: red;
}

.card {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90vw;
  border-radius: 15rpx 50rpx;
  margin-top: 10rpx;
  position: relative;
  overflow: hidden;
}
.card image{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}
.card > view {
  width: 85%;
  display: flex;
  justify-content: space-between;
}
.card > .title {
  margin-top: 40rpx;
}
.card > .info {
  margin: 30rpx 0;
}
.card > view > text{
  color: white;
}
.title .schoolname{
  font-size: 35rpx;
  font-weight: bolder;
}
.title .tag{
  font-size: 27rpx;
  line-height: 50rpx;
  position: relative;
}
.title .tag::after{
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 160rpx;
  height: 50rpx;
  border-radius: 40rpx;
  background-color: rgba(128, 128, 128,0.5);
  z-index: -1;
}

.info text{
  font-size: 27rpx;
}

/* 表单输入框部分 */
form{
  width: 100vw;
}
form .part1,
form .part2{
  display: flex;
  flex-direction: column;
  align-items: center;
}
form .box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90vw;
  height: 80rpx;
  line-height: 80rpx;
  margin: 10rpx 0;
  border-bottom: #ececec solid 1rpx;
}
form .box > view {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  height: 80rpx;
  width: 27vw;
}
form .box > input {
  width: 50vw;
  padding-right: 2vw;
  text-align: right;
}
.placeholder-css{
  line-height: 80rpx;
  font-size: 27rpx;
}

