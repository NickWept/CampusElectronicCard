}

/* 按钮和底部文本调整 */
button {
  width: 80vw !important; 
  height: 80rpx !important;
  padding: 0 !important;
  line-height: 80rpx !important;
  font-weight: 0 !important;
  border-radius: 15rpx !important; 
  letter-spacing: 5rpx;
  margin: 50rpx 0 0 !important;
  background: #03ba77;
  color: white;
}
.help {
  margin: 30rpx;
  color: #3857ac;
  font-size: 28rpx;
  text-decoration: underline;
}
.footertext {
  color: #ed9a00;
  font-size: 24rpx;
}

/* 选择菜单 */
.sheet{
  height: 50vh;
  width: 100vw;
  background-color: white;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.blod, .cancel {
  width: 100vw;
  text-align: center;
  height: 6vh;
  line-height: 6vh;
  font-weight: bolder;
}
.blod {
  border-bottom: 1rpx solid #f3f3f3;
}
.cancel {
  border-top: 20rpx solid #f3f3f3;
}

.banks{
  height: 35vh;
  width: 100vw;
  overflow: auto;
}

.banks .bankname{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: rgba(128, 128, 128, 0.2) solid 0.5rpx;
}
.banks .bankname > text {
  color: #fa8f28;
}

/* 提示框样式 */
.modal-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-content .tips{
  height: 8vh;
  line-height: 8vh;
  font-weight: bolder;
  font-size: 40rpx;
  color: #c3c3c3;
}

.modal-content .tipstext {
  padding: 10rpx 70rpx 0;
  color: #868686;
  font-size: 34rpx;
  text-align: center;
}