  color: white;
}

.card {
  position: relative;
  height: 360rpx;
  padding-top: 80rpx;
  width: 100%;
  overflow: hidden;
}

.card .box {
  
  width: 85%;
  height: 85%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 40rpx 40rpx 20rpx 40rpx;
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.schoolname {
  color: #b9fee1;
}

.detial {
  font-size: 25rpx;
  color: white;
  padding-top: 20rpx;
}

.info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: white;
  padding-bottom: 30rpx;
}

.tag {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx 0;
}

.tag .tagname{
  font-size: 40rpx;
  font-weight: 600;
}

.tag .text{
  margin-top: 5rpx;
  color: #c7c7c5;
  font-size: 19rpx;
}

.banners {
  width: 100vw;
  height: 65vh;
  /* background-color: yellow; */
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item {
  width: 88vw;
  height: 150rpx;
  margin: 20rpx;
  /* background-color: greenyellow; */
  border-radius: 10rpx;
  position: relative;

  display: flex;
  align-items: center;
  justify-content: space-between;

  overflow: hidden;
}

.item .bk{
  position: absolute;
  top: 0;
  left: 0;
  min-width: 100%;
  max-height: 150rpx;
}

.item .option{
  margin-left: 30rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.option .Blod{
  padding: 10rpx 0;
  font-weight: 800;
}

.option .text{
  font-size: 24rpx;
}

.item .iconimg{
  margin-right: 50rpx;
  width: 150rpx;
  height: 150rpx;
  position: relative;
}
.item .iconimg image{
  position: absolute;
  top: 0;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  padding-top: 15rpx;
  z-index: 100;
}
.item .iconimg::before{
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
  /* background-color: red; */
  z-index: 10;
}
.item .iconimg::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 170rpx;
  width: 170rpx;
  border-radius: 50%;
  /* background-color: yellow; */
}


.item.a{
  background-color: #ddece5;
  color: #24704a;
}
.item.a .iconimg::before{
  background-color: #c8e8db;
}
.item.a .iconimg::after{
  background-color: #d3ede2;
}
