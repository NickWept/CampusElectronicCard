
.card image{
  position: absolute;
  top: 0;
  left: 0;
  min-width: 100%;
  height: 360rpx;
  z-index: -1;
}

button {
  background-color: #f6825b;
  padding: 0 !important;
  line-height: 70rpx !important;
  margin: 0 !important;
  width: 150rpx !important;
  height: 70rpx;
  font-weight: 0 !important;
